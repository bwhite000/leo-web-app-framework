{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "rootDir": "lib/",
        "outDir": "dist",
        "removeComments": true,
        "declaration": true,

        "alwaysStrict": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "stripInternal": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true
    },
    "files": [
        "lib/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
